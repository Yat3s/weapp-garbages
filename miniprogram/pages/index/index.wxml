<garbages wx:if="{{currentTab=='garbage'}}"></garbages>
<exam wx:if="{{currentTab=='exam'}}"></exam>

<view style="display:flex;height: 120rpx;" class="padding-left padding-right cu-bar bg-white shadow foot">
  <view
  style='border-radius:{{currentTab==item.id ? 100 : 0}}rpx; background:{{currentTab==item.id ? item.color : white}}; align-items:center;justify-content:center;text-align:center;transition: width 0.5s;width:{{currentTab==item.id ? partWidth * 1.5 : partWidth}}px;height:70%' 
  class='flex padding-top-sm padding-bottom-sm' 
  wx:for="{{tabs}}" 
  wx:key 
  data-tabid="{{item.id}}" 
  bindtap='onTabSelect'
  >
    <image style="width:36rpx;height:36rpx" src='{{item.icon}}'/>
    <view class="text-bold margin-left-sm" hidden='{{currentTab!=item.id}}'>{{item.title}}</view>
  </view>
</view>